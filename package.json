{
  "name": "@spongewallet/sdk",
  "version": "0.1.0",
  "type": "module",
  "description": "SDK for spinning up wallets for AI agents with Claude Agent SDK integration",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "spongewallet": "./dist/bin/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "bun run build",
    "example:basic": "bun run examples/basic.ts",
    "example:transfer": "bun run examples/transfer.ts",
    "example:claude": "bun run examples/claude-agent.ts",
    "example:tools": "bun run examples/direct-tools.ts"
  },
  "dependencies": {
    "zod": "^3.24.0",
    "open": "^10.1.0",
    "clipboardy": "^4.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": ">=0.30.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/sdk": {
      "optional": true
    }
  },
  "keywords": [
    "wallet",
    "ai",
    "agent",
    "claude",
    "mcp",
    "crypto",
    "ethereum",
    "solana"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/paysponge/spongewallet-sdk"
  },
  "homepage": "https://github.com/paysponge/spongewallet-sdk#readme",
  "bugs": {
    "url": "https://github.com/paysponge/spongewallet-sdk/issues"
  }
}
